<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cnAdmin.HoSoFragment">

    <ImageView
        android:id="@+id/imgAnhHoSo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/icon_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtNameAcount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:text="thanhltph49838@gmail.com"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgAnhHoSo" />

    <Button
        android:id="@+id/btnDanhGia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/colorIcon"
        android:gravity="start|center_vertical"
        android:padding="16dp"
        android:paddingStart="60dp"
        android:text="Điều khoản"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtNameAcount" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/icon_feed_back"
        app:layout_constraintBottom_toBottomOf="@id/btnDanhGia"
        app:layout_constraintStart_toStartOf="@id/btnDanhGia"
        app:layout_constraintTop_toTopOf="@id/btnDanhGia" />


    <Button
        android:id="@+id/btnDiaChi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/colorIcon"
        android:gravity="start|center_vertical"
        android:padding="16dp"
        android:paddingStart="60dp"
        android:text="Địa chỉ"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnDanhGia" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/icon_address"
        app:layout_constraintBottom_toBottomOf="@id/btnDiaChi"
        app:layout_constraintStart_toStartOf="@id/btnDiaChi"
        app:layout_constraintTop_toTopOf="@id/btnDiaChi" />


    <Button
        android:id="@+id/btnThanhToan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/colorIcon"
        android:gravity="start|center_vertical"
        android:padding="16dp"
        android:paddingStart="60dp"
        android:text="Thanh toán"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnDiaChi" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/icon_thanh_toan"
        app:layout_constraintBottom_toBottomOf="@id/btnThanhToan"
        app:layout_constraintStart_toStartOf="@id/btnThanhToan"
        app:layout_constraintTop_toTopOf="@id/btnThanhToan" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/consViewShowAcount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnThanhToan">

        <Button
            android:id="@+id/btnShowAcount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/colorIcon"
            android:gravity="start|center_vertical"
            android:padding="16dp"
            android:paddingStart="60dp"
            android:text="Tài khoản người dùng"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/icon_profile"
            app:layout_constraintBottom_toBottomOf="@id/btnShowAcount"
            app:layout_constraintStart_toStartOf="@id/btnShowAcount"
            app:layout_constraintTop_toTopOf="@id/btnShowAcount" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>